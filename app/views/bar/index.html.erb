<outer1>
  <h1 align="center" class="svg_txt_1">Bar Chart</h1>
  <h2 align="center">from json</h2>
  
  <script src="https://d3js.org/d3.v4.min.js"></script>
  <script>
    var jsonData = d3.json('/bar/json.json', function(jsonData){

      var canvas = d3.select("outer1").append("svg")
        .attr("height","500")
        .attr("width","100%")
        .append("g")
          .attr("transform","translate(300,60)");

      canvas.selectAll("rect")
        .data(jsonData)
        .enter()
          .append("rect")
          .attr("width",30)
          .attr("height",function(d){ return d.wins * 10 })
          .attr("x",function(data,i){ return i*40 })
          .attr("fill",function(d){ return d.team_color });

      });

  </script>
</outer1>

