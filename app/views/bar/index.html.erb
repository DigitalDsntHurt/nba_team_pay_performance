<outer5>
  <h1 align="center" class="svg_txt_1">Bar Chart</h1>
    <h4 align="center">from json, with labels, clumsily x- and y-scaled </h4>
  
  <script src="https://d3js.org/d3.v4.min.js"></script>
  <script>
    var data = d3.json('bar/json.json', function(data){

      var width = 900;
      var height = 500;
      
      var xScale = d3.scale.linear()
        .domain([1,30])
        .range([5,495]);
      
      var yScale = d3.scale.linear()
        .domain([0,60])
        .range([height-20,20]);

      var canvas = d3.select("outer5").append("svg")
        .attr("height",height)
        .attr("width",width)
        .append("g")
        .attr("transform","translate(150,60)");

      canvas.selectAll("rect")
        .data(data)
        .enter()
          .append("rect")
          .attr("width",15)
          .attr("x",function(d,i){ return xScale(i) })
          .attr("y",function(d){ return yScale(d.wins) })
          .attr("height",function(d){ return yScale(d.wins) })
          .attr("fill",function(d){ return d.team_color });

      canvas.selectAll("text")
        .data(data)
        .enter()
          .append("text")

            .text(function(d){ return d.team_name })
            .style("text-anchor","end")
            .attr("dx", function(d,i){ return xScale(i) + 10 })
            .attr("dy", function(d){ return yScale(d.wins) - 15 })
            .attr("fill",function(d){ return d.team_color }); 
    });

  </script>
