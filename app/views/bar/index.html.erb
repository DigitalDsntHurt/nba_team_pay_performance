

<outer>
  <h1 align="center" class="svg_txt_1">Bar Chart</h1>
  <h2 align="center">from js array (hand coded)</h2>
  
  <script src="https://d3js.org/d3.v4.min.js"></script>
  <script>
    var data = [50,100,150,175,200,225,275,300]

    var width = "100%"
    var height = "360"

      var canvas = d3.select("outer").append("svg")
        .attr("height",height)
        .attr("width",width)
        .append("g")
          .attr("transform","translate(700,50)");

      canvas.selectAll("rect")
        .data(data)
        .enter()
          .append("rect")
          .attr("width",20)
          .attr("height",function(data){ return data })
          .attr("x",function(data,i){ return i*30 })
          .attr("fill","#005083");
  </script>
</outer>

