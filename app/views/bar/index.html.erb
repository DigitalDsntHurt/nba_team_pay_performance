<chart1>
    <h1 align="center" class="svg_txt_1">Scales with scaled Data</h1>
    <h4 align="center"> data </h4>
  <script src="https://d3js.org/d3.v4.min.js"></script>
  <script>

  var data = d3.csv('/2016-17_public.csv', function(data){

    var width = 1500;
    var height = 600;
    var padding = {top: 20, right: 40, bottom: 20, left: 40};
    
    var canvas = d3.select("chart1")
                  .append("svg")
                  .attr("width",width)
                  .attr("height",height);

    var x = d3.scaleLinear()
        .domain([0,30])
        .range([padding.left, 1400]);

    var y = d3.scaleLinear()
            .domain([0,82])
            .range([height,0]);

    var axisGroup = canvas.append("g")
                .attr("transform", "translate(" + padding.left + "," + padding.top + ")");
// Draw Axes
    axisGroup.append("g")
      .attr("transform", "translate(" + padding.left + ",0)")
      .attr("class", "axis")
      .call(d3.axisLeft(y)
          .ticks(10));

    axisGroup.append("g")
      .attr("transform", "translate(1400,0)")
      .attr("class", "axis")
      .call(d3.axisRight(y)
          .ticks(10));

    axisGroup.append("g")
      .attr("transform", "translate(0,550)")
      .attr("class", "axis")
      .call(d3.axisBottom(x)
        .ticks(30)); 


// Draw Bars
    var barsGroup = canvas.append("g")
                .attr("transform", "translate(" + padding.left*2 + "," + padding.top + ")");

    barsGroup.selectAll("rect")
      .data(data)
      .enter()
        //.attr("transform", "translate(" + padding.left + ",0)")
        .append("rect")
        //.attr("width",(width-((padding.right*2)+(padding.left*2)))/50)
        //var barWidth = 30
        .attr("x", function(d,i){ return x(i)-33 })  
        .attr("width", width/50 )
        //.attr("y", function(d,i){ return x(i)-33 })  
        .attr("y", 0)  
        .attr("height", function(d){ return y(d.wins) })
        .attr("fill", function(d){ return d.team_color });


  });
</script>
